# 基础环境配置文件 - 所有环境通用的配置项 (.env)

# ===== 微信小程序相关配置 =====
VITE_WX_APPID='' # 微信小程序AppID（需要在微信公众平台申请）

# ===== 国际化配置 =====
VITE_FALLBACK_LOCALE='zh-Hans' # 默认语言，当找不到对应翻译时使用的语言

# ===== 请求相关配置 =====
VITE_TOKEN_KEY='token' # 认证令牌的存储键名
VITE_SHOW_LOADING=true # 是否在请求过程中显示加载提示
VITE_REQUEST_TIMEOUT=10000 # 请求超时时间（毫秒）
VITE_CONTENT_TYPE='application/json;charset=UTF-8' # 请求内容类型
VITE_API_LOG=false # 是否开启API请求日志（默认关闭，各环境可覆盖）
VITE_API_BASEURL='' # API基础地址（留空，由各环境配置文件覆盖）

# ===== 主题配置 =====
VITE_DEFAULT_THEME='light' # 默认主题模式：light或dark
